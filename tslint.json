{
    "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
    "linterOptions": {
        "exclude": ["config/**/*.js", "node_modules/**/*.ts", "coverage/lcov-report/*.js"]
    },
    "rules": {
        "align": [true, "parameters", "arguments", "statements"],
        "array-type": [true, "generic"],
        "arrow-parens": false,
        "arrow-return-shorthand": false,
        "ban-types": false,
        "class-name": true,
        "cognitive-complexity": false,
        "comment-format": [false, "check-lowercase", { "ignore-words": ["TODO"] }],
        "curly": true,
        "encoding": true,
        "eofline": true,
        "forin": false,
        "indent": [true, "spaces", 4],
        "interface-name": [false, "always-prefix"],
        "interface-over-type-literal": false,
        "jsx-alignment": false,
        "jsx-boolean-value": false,
        "jsx-equals-spacing": true,
        "jsx-key": true,
        "jsx-no-bind": true,
        "jsx-no-lambda": false,
        "jsx-no-multiline-js": false,
        "jsx-self-close": true,
        "jsx-wrap-multiline": false,
        "linebreak-style": false,
        "no-angle-bracket-type-assertion": false,
        "member-ordering": false,
        "max-classes-per-file": false,
        "max-file-line-count": [true, 800],
        "max-line-length": [true, 350],
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": false,
        "no-commented-code": false,
        "no-conditional-assignment": false,
        "no-consecutive-blank-lines": true,
        "no-console": false,
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-imports": false,
        "no-duplicate-string": false,
        "no-duplicate-super": true,
        "no-duplicate-variable": [true, "check-parameters"],
        "no-empty": true,
        "no-eval": true,
        "no-identical-functions": false,
        "no-implicit-dependencies": false,
        "no-invalid-this": false,
        "no-irregular-whitespace": false,
        "no-misused-new": true,
        "no-namespace": false,
        "no-reference-import": true,
        "no-require-imports": false,
        "no-string-literal": false,
        "no-submodule-imports": false,
        "no-this-assignment": false,
        "no-trailing-whitespace": false,
        "no-unnecessary-class": false,
        "no-unnecessary-initializer": true,
        "no-unnecessary-qualifier": false,
        "no-unsafe-any": false,
        "no-unused-expression": true,
        "no-unused-variable": false,
        "no-use-before-declare": false,
        "no-var-requires": false,
        "object-literal-key-quotes": false,
        "object-literal-sort-keys": false,
        "ordered-imports": [
            false,
            {
                "import-sources-order": "lowercase-last",
                "named-imports-order": "lowercase-first"
            }
        ],
        "one-line": [true, "check-catch", "check-else", "check-open-brace", "check-whitespace"],
        "only-arrow-functions": false,
        "prefer-conditional-expression": true,
        "prefer-for-of": false,
        "prefer-method-signature": true,
        "prefer-object-spread": false,
        "quotemark": [false, "single", "jsx-double"],
        "restrict-plus-operands": false,
        "semicolon": [false, "always", "ignore-bound-class-methods"],
        "space-before-function-paren": [false, "always"],
        "space-within-parens": false,
        "switch-default": true,
        "trailing-comma": false,
        "triple-equals": false,
        "typedef-whitespace": false,
        "typedef": true,
        "typeof-compare": true,
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"],
        "whitespace": [false, "check-branch", "check-operator", "check-typecast"]
    }
}
